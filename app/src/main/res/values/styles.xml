<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPurple</item>
        <item name="colorPrimaryDark">@color/colorDakrPurple</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Status bar stuff. -->
        <!-- 상태바 배경 색상 -->
        <item name="android:statusBarColor">@color/colorWhite</item>
        <!-- 상태바 글자 색상 -->
        <item name="android:windowLightStatusBar">true</item>


        <!-- No Title Bar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NoAnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AnimTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/CustomAnim</item>
    </style>

    <style name="CustomAnim" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/hold</item>
        <item name="android:activityCloseEnterAnimation">@anim/hold</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>
</resources>

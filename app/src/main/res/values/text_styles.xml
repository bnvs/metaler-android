<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--  TextView 스타일 속성  -->

    <style name="roundingBorderInactiveTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/lightgrey_rounding_border</item>
        <item name="android:textColor">@color/colorLightGrey</item>
    </style>

    <style name="roundingBorderActiveTextView" parent="roundingBorderInactiveTextView">
        <item name="android:background">@drawable/purple_rounding_border</item>
        <item name="android:textColor">@color/colorPurple</item>
    </style>

    <style name="tagTextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorPurple</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="homeTag" parent="tagTextView">
        <item name="android:layout_marginLeft">@dimen/wideMargin</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="homePostTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/wideMargin</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cautionTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="postMenuTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="lightGuideTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorLightGrey</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="myPageMenuTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="bigTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="bigPurpleTitle" parent="bigTitleTextView">
        <item name="android:textColor">@color/colorPurple</item>
    </style>

    <style name="sideInfoTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="homeDate" parent="sideInfoTextView">
        <item name="android:layout_marginRight">@dimen/wideMargin</item>
    </style>

    <style name="sideInfoVerticalDivider">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingHorizontal">4dp</item>
        <item name="android:text">|</item>
        <item name="android:textColor">@color/colorGrey</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="error404TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/error_404</item>
        <item name="android:textColor">@color/colorGreyPurple</item>
    </style>

    <style name="error404TextViewBookmarks">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:text">@string/bookmark_error_404</item>
        <item name="android:textColor">@color/colorGreyPurple</item>
    </style>

    <!-- EditText 스타일 속성 -->
    <style name="editTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>

    <style name="numberEditText" parent="editTextStyle">
        <item name="android:ems">10</item>
        <item name="android:inputType">number</item>
    </style>

    <style name="titleEditText" parent="editTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginLeft">@dimen/wideMargin</item>
        <item name="android:layout_marginRight">@dimen/wideMargin</item>
        <item name="android:textSize">16sp</item>
        <item name="android:inputType">text</item>
    </style>

    <!-- 구분선 스타일 속성 -->
    <style name="dividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="homeDivider" parent="dividerStyle">
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="myPageDivider" parent="dividerStyle">
        <item name="android:layout_marginHorizontal">10dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="postDivider" parent="dividerStyle">
        <item name="android:layout_marginHorizontal">@dimen/wideMargin</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>
</resources>
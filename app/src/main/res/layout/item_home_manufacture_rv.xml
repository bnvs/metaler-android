<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/manufactureTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorDarkGrey"
        tools:text="Title타이틀제목"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/manufactureTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorPurple"
        tools:text="#가게이름홍대금속"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constrainedWidth="true"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@id/manufactureTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/manufactureUserName"
        />

    <TextView
        android:id="@+id/manufactureUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorGrey"
        android:text="작성자이름"
        android:layout_marginRight="4dp"
        app:layout_constraintStart_toEndOf="@id/manufactureTag"
        app:layout_constraintTop_toTopOf="@id/manufactureTag"
        app:layout_constraintBottom_toBottomOf="@id/manufactureTag"
        app:layout_constraintEnd_toStartOf="@id/userNameLine"
        />
    <TextView
        android:id="@+id/userNameLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/colorGrey"
        android:text="|"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toStartOf="@id/manufactureDate"
        app:layout_constraintTop_toTopOf="@id/manufactureUserName"
        />
    <TextView
        android:id="@+id/manufactureDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorGrey"
        android:text="2020.10.10"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/manufactureUserName"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <View
        android:id="@+id/manufactureLine"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="?android:attr/listDivider"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/manufactureTag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="20dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/materialsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorDarkGrey"
        tools:text="Title타이틀제목 "
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/materialsTag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorPurple"
        tools:text="#가게이름홍대금속"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/materialsTitle"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorGrey"
        android:text="작성자이름"
        android:layout_marginRight="4dp"
        app:layout_constraintTop_toTopOf="@id/materialsTag"
        app:layout_constraintBottom_toBottomOf="@id/materialsTag"
        app:layout_constraintEnd_toStartOf="@id/userNameLine"
        />
    <TextView
        android:id="@+id/userNameLine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/colorGrey"
        android:text="|"
        android:layout_marginRight="4dp"
        app:layout_constraintEnd_toStartOf="@id/date"
        app:layout_constraintTop_toTopOf="@id/userName"
        />
    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/colorGrey"
        android:text="2020.10.10"
        android:layout_marginLeft="4dp"
        app:layout_constraintTop_toTopOf="@id/userName"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
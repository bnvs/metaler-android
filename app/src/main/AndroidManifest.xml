<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bnvs.metaler">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".ui.login.GlobalApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_metaler"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_metaler_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="com.kakao.sdk.AppKey"
            android:value="${KAKAO_API_KEY}" />

        <service
            android:name=".firebase.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".ui.home.ActivityHome"></activity>
        <activity android:name=".ui.materials.ActivityMaterials" />
        <activity android:name=".ui.manufactures.ActivityManufactures" />
        <activity android:name="com.bnvs.metaler.ui.bookmarks.ActivityBookmarks" />
        <activity android:name=".ui.mypage.ActivityMyPage" />
        <activity android:name=".ui.search.ActivitySearch" />
        <activity android:name=".ui.detail.ActivityDetail" />
        <activity android:name=".ui.postsecond.ActivityPostSecond" />
        <activity android:name=".ui.postfirst.ActivityPostFirst" />
        <activity android:name=".ui.myposts.ActivityMyPosts" />
        <activity android:name=".ui.jobmodify.ActivityJobModify" />
        <activity android:name=".ui.jobinput.ActivityJobInput" />
        <activity android:name=".ui.termsagree.ActivityTermsAgree" />
        <activity android:name=".ui.login.ActivityLogin">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>